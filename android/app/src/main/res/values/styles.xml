<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.NoActionBar"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- Epicollect5 Colors on light theme -->
        <item name="colorPrimaryDark">#673C90</item>
        <item name="colorAccent">#673C90</item>
        <item name="android:statusBarColor">#331e48</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch"
        parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">#ffffff</item>
        <item name="android:statusBarColor">#331e48</item>
    </style>
</resources>