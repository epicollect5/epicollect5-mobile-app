{
    "explorer.decorations.colors": false,
    "editor.fontWeight": "500",
    "git.enabled": false,
    "scm.inputFontFamily": "default",
    "editor.fontFamily": "'JetBrains Mono NL'",
    "editor.fontSize": 14,
    "editor.autoClosingQuotes": "never",
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#87C7A6",
        "titleBar.activeForeground": "#000000",
        "[Idea intellij light theme]": {
            "editor.background": "#f4f4f4",
            // "editor.background": "#fff",
            "editor.lineHighlightBackground": "#ddd",
            "sideBar.background": "#f4f4f4",
            "list.hoverBackground": "#ddd",
            "editorSuggestWidget.focusHighlightForeground": "#ffffff"
        }
    },
    "typescript.suggest.autoImports": false,
    "javascript.suggest.autoImports": false,
    "[bat]": {},
    "workbench.preferredLightColorTheme": "Idea intellij light theme",
    "workbench.preferredDarkColorTheme": "Monokai",
    "search.exclude": {
        "jshintrc": true,
        ".jshintrc:": true,
        "**/vendor": true,
        "**/node_modules": true,
        "**/platforms": true,
        "**/dist": true,
        ".history": true
    },
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss"
    ],
    "todohighlight.exclude": [
        "node_modules/",
        "vendor/",
        "storage/",
        "wiki/"
    ],
    "editor.linkedEditing": true,
    "terminal.integrated.fontSize": 15,
    "errorLens.messageEnabled": false,
    "errorLens.gutterIconsEnabled": true,
    //html attributes on separate lines
    "html.format.wrapAttributes": "force-expand-multiline",
    //to remove annoying search sidebar when using keyboard shorcuts
    //otherwise it make wrong changes
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": false,
    "eslint.format.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "typescript.suggest.paths": false,
    "path-intellisense.mappings": {
        "/": "${workspaceFolder}",
        "@": "${workspaceFolder}/src"
    },
    "cssVariables.lookupFiles": [
        "src/theme/variables.css"
    ],
    "explorer.compactFolders": false,
    //need this to rmove slots deprecation linting, ionic slots !== vue slots
    "xmlTools.splitAttributesOnFormat": true,
    "editor.autoClosingBrackets": "never",
    "editor.renderWhitespace": "none",
    "editor.selectionHighlight": false,
    "editor.occurrencesHighlight": "off",
    "local-history.daysLimit": 1,
    "todohighlight.keywords": [
        {
            "text": "HACK:",
            "color": "#ffffff",
            "backgroundColor": "Orange",
            "isWholeLine": true
        },
        {
            "text": "IMP:",
            "color": "#ffffff",
            "backgroundColor": "#A386BD",
            "isWholeLine": true
        },
        {
            "text": "TODO:",
            "color": "#ffffff",
            "isWholeLine": true,
            "backgroundColor": "#00B2ED"
        }
    ],
    "editor.bracketPairColorization.enabled": false,
    "prettier.singleAttributePerLine": true,
    "html.autoCreateQuotes": false
    // "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    // "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    //"javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": false
}